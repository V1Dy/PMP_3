<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/colorTableBackground">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/mcheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorButtonBackground"
            android:paddingStart="8dp"
            android:text="komponenta stolu"
            android:textColor="@color/colorText"
            android:textSize="18dp"
            android:textStyle="bold">

        </com.google.android.material.checkbox.MaterialCheckBox>

        <TextView
            android:id="@+id/textViewBeerCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/mcheckbox"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="12dp"
            android:text="beerCount"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorText" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>